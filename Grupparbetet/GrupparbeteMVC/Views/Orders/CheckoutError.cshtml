@model GrupparbeteMVC.Models.Order
<div id="checkout-container">
    <h1> Checkout </h1>
    <h3>One or more fields was not filled out correctly. Please enter your information again.</h3>
    <form id="checkout-form" class="checkout-form" asp-action="PlaceOrder" method="POST">
        <label for="name" class="checkout-label">Name:</label>
        <input type="text" id="name" name="Name" class="checkout-input">

        <label for="last-name" class="checkout-label">Last Name:</label>
        <input type="text" id="last-name" name="LastName" class="checkout-input">

        <label for="delivery-address" class="checkout-label">Delivery Address:</label>
        <input type="text" id="delivery-address" name="DeliveryAdress" class="checkout-input">

        <label for="card-number" class="checkout-label">Card Number:</label>
        <input type="text" id="card-number" name="CardNumber" class="checkout-input">

        <label for="expiration-date" class="checkout-label">Expiration Date:</label>
        <input type="date" id="expiration-date" name="CardExpirationDate" class="checkout-input">

        <label for="cvc" class="checkout-label">CVC:</label>
        <input type="text" id="cvc" name="CardCVC" class="checkout-input">

        <input type="submit" value="Place Order" />
    </form>

</div>